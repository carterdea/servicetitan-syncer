# Auth/token endpoints
ST_AUTH_URL_PROD=https://auth.servicetitan.io/connect/token
ST_AUTH_URL_INT=https://auth-integration.servicetitan.io/connect/token

# API bases
ST_API_BASE_PROD=https://api.servicetitan.io
ST_API_BASE_INT=https://api-integration.servicetitan.io

# OAuth clients (prefer separate apps per env)
ST_CLIENT_ID_PROD=your_production_client_id_here
ST_TENANT_ID_PROD=your_production_tenant_id_here
ST_CLIENT_SECRET_PROD=your_production_client_secret_here
ST_APP_KEY_PROD=your_production_app_key_here

ST_CLIENT_ID_INT=your_integration_client_id_here
ST_TENANT_ID_INT=your_integration_tenant_id_here
ST_CLIENT_SECRET_INT=your_integration_client_secret_here
ST_APP_KEY_INT=your_integration_app_key_here


# SQLite db path for ID mapping
STSYNC_DB=stsync.sqlite3

# Optional defaults
ST_PAGE_SIZE=200
ST_HTTP_TIMEOUT=30
